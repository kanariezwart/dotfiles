# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = Thijs Alberts
	email = t.alberts@felyx.com
	signingkey = C4B95383AAF8FD4A
[alias]
  discard = reset --hard HEAD
  ch = checkout
  sign = commit -S -m
  signtag = 'tag -s -m ""'
  d = diff
  graph = log --graph
  last = log -n 10
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
  rmtag = "!sh -c 'git tag -d $1; git push origin :refs/tags/$1'"

  release   = !sh "$HOME/Developer/personal/dotfiles/git-extras/git-release.sh"
  sign-release   = !sh "$HOME/Developer/personal/dotfiles/git-extras/git-sign-release.sh"
  setup     = !zsh "$HOME/Developer/personal/dotfiles/git-extras/git-setup.sh"
  summary   = !zsh "$HOME/Developer/personal/dotfiles/git-extras/git-summary.sh"
  pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1; } ; f"
  cleanup = !ruby "$HOME/Developer/personal/dotfiles/git-extras/git-cleanup.rb"
[commit]
	gpgsign = true
[core]
	editor = nano
	autocrlf = input
	excludesfile = /Users/alberts/.gitignore_global
[github]
    user = thijsfelyx
[credential]
	helper = osxkeychain
[gpg]
	program = /usr/local/bin/gpg
[color "decorate"]
	HEAD = 14 normal italic
	remotebranch = 13 normal
	grafted = 1 normal italic
	tag = 3 normal
	stash = 8 normal
	branch = 14 normal
[color "diff"]
	whitespace = normal reverse
	commit = 3 normal
	func = normal
	newMoved = 14 normal
	oldMovedAlternativeDimmed = 4 normal dim
	frag = 3 normal ul
	oldMovedAlternative = 12 normal dim
	contextBold = normal bold
	newBold = 10 normal bold
	context = normal
	oldMoved = 14 normal dim
	oldBold = 9 normal dim bold
	newMovedDimmed = 6 normal
	meta = 3 normal
	newDimmed = 2 normal
	newMovedAlternative = 12 normal
	new = 10 normal
	newMovedAlternativeDimmed = 4 normal
	oldMovedDimmed = 6 normal dim
	oldDimmed = 1 normal dim
	old = 9 normal dim
[color "grep"]
	filename = 7 normal
	function = 10 normal
	column = 8 normal
	linenumber = 8 normal
[color "interactive"]
	header = 8 normal bold
	help = 8 normal
	error = 1 normal italic
	prompt = 15 4
[color "status"]
	changed = 11 normal
	unmerged = 9 normal
	nobranch = 1 normal italic
	updated = 10 normal
	localbranch = 14 normal
	added = 10 normal
	untracked = normal dim
	header = normal
	remotebranch = 13 normal
	branch = 14 normal
[color "branch"]
	remote = 13 normal dim
	upstream = 13 normal
	plain = 14 normal dim
	current = 14 normal
	local = 14 normal dim
[color "remote"]
	success = 2 normal
	error = 1 normal
	hint = normal dim
	warning = 3 normal
[diff]
	colorMoved = zebra
